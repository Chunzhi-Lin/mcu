vpath %.s $(sort $(dir $(ASM_SOURCES)))

$(BUILD_DIR)/%.o: %.c Makefile | $(BUILD_DIR) 
	$(CC) -c $(CFLAGS) -Wa,-a,-ad,-alms=$(BUILD_DIR)/$(notdir $(<:.c=.lst)) $< -o $@

$(BUILD_DIR)/%.o: %.s Makefile | $(BUILD_DIR)
	$(AS) -c $(CFLAGS) $< -o $@

$(BUILD_DIR)/$(TARGET_APP).elf: $(OBJECTS) Makefile $(LDSCRIPT).ldi
	$(CC) -D'RUNNING_ADDRESS=0x08008000' -E -xc -P -C $(LDSCRIPT).ldi > $(LDSCRIPT).ld
	$(CC) $(OBJECTS) $(LDFLAGS) -Wl,-Map=$(BUILD_DIR)/$(TARGET_APP).map,--cref -o $@
	$(SZ) $@

$(BUILD_DIR)/$(TARGET_LOADER).elf: $(OBJECTS) Makefile $(LDSCRIPT).ldi
	$(CC) -D'RUNNING_ADDRESS=0x08000000' -E -xc -P -C $(LDSCRIPT).ldi > $(LDSCRIPT).ld
	$(CC) $(OBJECTS) $(LDFLAGS) -Wl,-Map=$(BUILD_DIR)/$(TARGET_LOADER).map,--cref -o $@
	$(SZ) $@

$(BUILD_DIR)/%.hex: $(BUILD_DIR)/%.elf | $(BUILD_DIR)
	$(HEX) $< $@

$(BUILD_DIR)/%.dis: $(BUILD_DIR)/%.elf | $(BUILD_DIR)
	$(DP) -D $< > $@
	
